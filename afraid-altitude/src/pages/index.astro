---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CategoryCard from "../components/CategoryCard.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<!-- Hero Section -->
		<section class="hero">
			<h1>Chris Nickerson</h1>
			<p>
				Explore stories about travel adventures, delicious recipes,
				family moments, and lifestyle tips.
			</p>
		</section>
		<section class="categories">
			<CategoryCard
				title="Travel"
				description="Discover the beauty of the world..."
				link="/travel/"
			/>
			<CategoryCard
				title="Cooking"
				description="Explore recipes and tips..."
				link="/cooking/"
			/>
			<CategoryCard
				title="Family"
				description="Heartwarming stories..."
				link="/family/"
			/>
			<CategoryCard
				title="Lifestyle"
				description="Inspiration and ideas..."
				link="/lifestyle/"
			/>
		</section>

		<Footer />
	</body>
</html>
